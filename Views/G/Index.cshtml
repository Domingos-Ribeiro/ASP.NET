@model EquipasMembros.ViewModel.EquipaMembros

@{
    ViewBag.Title = "Index";
}



<h2>Menu: G</h2>

<table class="table">
    
<br />
    <br />

    <p><label>Nome das Equipas</label> &nbsp  - Clique em <label style="color:blue">Ver Membros</label> para mais detalhes.</p>

    @foreach (var item in Model.Equipas)
    {
        @*<tr>*@
        @*<th>*@
        @*<label>Equipas</label>*@
        @*</th>*@

        @*</tr>*@

        @* A diferença para o exercicio anterior, o F, é que ao selecionar, aparece a cor verde;
            a string selectedRow é usada para "Pintar" a <tr> recorrendo ao Bootstrap*@

        string selectedRow = "";
        if (item.Id == ViewBag.equipaclicada)
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.NomeEquipa)
            </td>

            <td>
                @Html.ActionLink("Ver Membros", "Index", new { id = item.Id })
            </td>
        </tr>

    }
</table>


@* Para colocar a linha vermelha na view:*@
<hr style="border-color:red; border-width:5px;"/>

@* A outra diferença é a colocação dos membros da Equipa Selecionada
    dentro de uma nova tabela, apenas para melhorar o visual.*@
<table class="table">
    <tr>
        <th>        <label>N.º de Membro</label></th>
        <th>        <label>Nome</label></th>
        <th>        <label>N.º de Equipa</label></th>
    </tr>

    @foreach (var item in Model.Membros)
    {
        if (item.EquipaId == ViewBag.equipaclicada)
        {
            <tr>
                <td>@item.Id</td> <td>@item.NomeMembro</td> <td>@item.EquipaId</td>
            </tr>
        }
    }

</table>
