
@model IEnumerable<EquipasMembros.Models.Membro>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>

    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>
                @Html.DropDownList("idDrop",
                (SelectList)ViewBag.LISTA, htmlAttributes: new { @class = "form-control" })
            </td>

            <td>
                <input id="Button1" type="submit" 
                       class="form-control" value="ATUALIZAR PAGINA" />
            </td>
        </tr>
    </table>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Equipa.NomeEquipa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeMembro)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Equipa.NomeEquipa)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NomeMembro)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                </td>
            </tr>
        }
    </table>
}